{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Projects */
    // "incremental": true,
    // "composite": true,
    // "tsBuildInfoFile": "./.tsbuildinfo",
    // "disableSourceOfProjectReferenceRedirect": true,
    // "disableSolutionSearching": true,
    // "disableReferencedProjectLoad": true,

    /* Language and Environment */
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx" /* React(17+) 的 JSX 转换。无需导入 React | 更小的 Bundle 体积 */,
    // "libReplacement": true,
    "experimentalDecorators": true /* 启用实验性装饰器 */,
    "emitDecoratorMetadata": true /* 启用装饰器元数据 */,
    // "jsxFactory": "",
    // "jsxFragmentFactory": "",
    // "jsxImportSource": "",
    // "reactNamespace": "",
    // "noLib": true,
    // "useDefineForClassFields": true,
    // "moduleDetection": "auto",

    /* Modules */
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "bundler" /* 模块解析规则，适用现代打包工具。支持无扩展名导入 | 支持多种解析路径（路径映射、绝对路径、静态资源） */,
    "baseUrl": "./" /* 非相对路径 -> 导入模块的查找起始位置 */,
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./"] /* 项目根目录别名 */
    },
    // "rootDirs": [],
    // "typeRoots": [],
    // "types": [],
    // "allowUmdGlobalAccess": true,
    // "moduleSuffixes": [],
    // "allowImportingTsExtensions": true,
    // "rewriteRelativeImportExtensions": true,
    // "resolvePackageJsonExports": true,
    // "resolvePackageJsonImports": true,
    // "customConditions": [],
    // "noUncheckedSideEffectImports": true,
    "resolveJsonModule": true /* 允许导入 JSON 模块 */,
    // "allowArbitraryExtensions": true,
    // "noResolve": true,

    /* JavaScript Support */
    "allowJs": true /* 可以书写 JS 代码 */,
    "checkJs": true /* 检查 JS 代码 */,
    // "maxNodeModuleJsDepth": 1,

    /* Emit */
    // "declaration": true,
    // "declarationMap": true,
    // "emitDeclarationOnly": true,
    // "sourceMap": true,
    // "inlineSourceMap": true,
    // "noEmit": true,
    // "outFile": "./",
    "outDir": "./dist",
    // "removeComments": true,
    // "importHelpers": true,
    // "downlevelIteration": true,
    // "sourceRoot": "",
    // "mapRoot": "",
    // "emitBOM": true,
    // "newLine": "crlf",
    // "stripInternal": true,
    // "noEmitHelpers": true,
    // "noEmitOnError": true,
    // "preserveConstEnums": true,
    // "declarationDir": "./",

    /* Interop Constraints */
    "isolatedModules": true /* 启用模块隔离，确保每个模块都是独立的 */,
    // "verbatimModuleSyntax": true,
    // "isolatedDeclarations": true,
    // "erasableSyntaxOnly": true,
    "allowSyntheticDefaultImports": true /* 编译时类型支持，允许从<没有设置默认导出的模块>中导入默认导出 */,
    "esModuleInterop": true /* 运行时，ES6模块化 和 CommonJS 互相操作 */,
    // "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true /* 强制文件名大小写一致。import './Components' 和 import './components' 视为不同 */,

    /* Type Checking */
    "strict": true /* 启用所有严格类型检查选项，所有 strict 开头的配置都启用 */,
    // "noImplicitAny": true,
    // "strictNullChecks": true,
    // "strictFunctionTypes": true,
    // "strictBindCallApply": true,
    // "strictPropertyInitialization": true,
    // "strictBuiltinIteratorReturn": true,
    // "noImplicitThis": true,
    // "useUnknownInCatchVariables": true,
    // "alwaysStrict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true /* 启用可选属性类型检查 */,
    // "noImplicitReturns": true,
    // "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true /* 启用索引访问类型检查 */,
    // "noImplicitOverride": true,
    // "noPropertyAccessFromIndexSignature": true,
    // "allowUnusedLabels": true,
    // "allowUnreachableCode": true,

    /* Completeness */
    // "skipDefaultLibCheck": true,
    "skipLibCheck": true /* 跳过库文件检查 */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
